namespace LibaryForFormsCalc
{
    public class Calc
    {
        public double dA;
        public double dB;
        public string action;
        public string a;
        public string b;
        
        public string getSign
        {
            set { action = value; }
            get { return action; }
        }

        public double A
        {
            set { a = value.ToString(); }
        }

        public double B
        {
            set { b = value.ToString(); }
        }

        public double Action()
        {
            dA = Convert.ToDouble(a);
            dB = Convert.ToDouble(b);

            switch (action)
            {
                case "+":
                    dA += dB;
                    break;
                case "-":
                    dA -= dB;
                    break;
                case "*":
                    dA *= dB;
                    break;
                case "/":
                    dA /= dB;
                    break;
            }
            return dA;
        }
    }
}
